@model BuildVersioningManager.Models.ProjectConfigModels.PrepareToDeleteProjectConfigModel
@{
	var projectConfig = @Model.ProjectConfig;
	var description = string.IsNullOrWhiteSpace(projectConfig.Description) ? "{empty}" : projectConfig.Description;
    ViewBag.Title = string.Format("Delete Project Config: {0}", projectConfig.Name);
}
<div class="row">
	<div class="col-md-10">
		<h2>Delete Project Config</h2>
		<p class="lead">Are you sure you want to delete this project config?</p>
		<p>NOTE: Any related version hisotry will remain unaffected and will not be deleted.</p>
		<hr/>
		@using (Html.BeginForm("DeleteProjectConfig", "ProjectConfig", new { projectName = projectConfig.Project.Name, name = projectConfig.Name }, FormMethod.Post))
		{
		<dl class="dl-horizontal">
			<dt>Project Config Id</dt>
			<dd>@projectConfig.Id</dd>

			<dt>Name:</dt>
			<dd>@projectConfig.Name</dd>

			<dt>Description:</dt>
			<dd>@description</dd>

			<dt></dt>
			<dd>
				<input class="btn btn-primary btn-sm" type="submit" value="Delete">
				<a class="btn btn-default btn-sm" href="@Url.RouteUrl("ViewProjectConfig", new { projectName = projectConfig.Project.Name, name = projectConfig.Name })">Cancel</a>
			</dd>
		</dl>
		}
	</div>
</div>